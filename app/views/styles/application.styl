@import 'nib'
@import '_base'

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0


/* Space out content a bit */
body
  padding-top 20px
  padding-bottom 20px
  // background url(/images/background.jpg)
  background url(/images/master-color.jpg)
  background-position 50% 0
  background-repeat no-repeat
  font-family Calibri, Candara, Segoe, "Segoe UI", Optima, Arial, sans-serif

.menu > ul
  text-transform uppercase
  font-size 20px
  font-weight normal
  margin 0 auto
  border-radius 8px
  background url(/images/Menu-Background.png) no-repeat
  background-position 50% 50%
  width 607px

.menu > ul > li
  padding 11px 7px

.menu > ul > li > a
  color #fff
  width 130px
  text-align center

.menu > ul > li > a.longer
  width 154px

.nav-pills>li.active>a, .nav-pills>li.active>a:hover, .nav-pills>li.active>a:focus
  background: none

.nav-pills>li.active
  background url(/images/Menu-Selected.png) no-repeat
  background-position 50% 50%

.nav>li>a:hover, .nav>li>a:focus
  text-decoration none
  background-color #151C64

.menu-magics-logo
  float right
  position relative
  top -15px
  left 10px

.menu-drylock-logo
  position relative
  top 11px
  left -10px

.products-menu
  margin-top 263px


.body
  height 2500px



.magics-main-logo
  text-align center
  margin-top 78px

.loading-circle
  text-align center
  margin-top 44px
  margin-bottom 38px

.loading-claim
  text-align center
  text-transform uppercase
  font-size 33px
  font-wight bold
  color #fff




