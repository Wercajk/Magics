// Contact
.contact
  width 100%
  position absolute
  overflow hidden
  top 4013px

  .contact-form
    position relative
    background url('/images/Contact-Form-Background.png') no-repeat
    float right
    margin-top 68px
    width 536px
    height 530px

    input, textarea, button, .send
      position absolute
      background-color transparent
      border 0
      color #101151
      font-size 23px

    input:focus,
    select:focus,
    textarea:focus,
    button:focus
      outline none

    .name
      top 90px
      left 180px
      width 285px

    .email
      top 131px
      left 180px
      width 285px

    .message
      top 205px
      left 180px
      width 285px
      height 185px
      resize none
      line-height 147%
      background url('/images/Contact-Form-Underlines.png')
      overflow hidden

    .send
      top 409px
      left 380px
      cursor pointer

