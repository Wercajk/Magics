.menu
  margin 0 auto
  width 940px

  ul
    text-transform uppercase
    font-size 20px
    font-weight normal
    border-radius 8px
    background url(/images/Menu-Background.png) no-repeat
    background-position 50% 50%
    width 607px
    float left
    margin-top 20px

.menu > ul > li:first-child
  margin-left 55px

.menu > ul > li
  padding 11px 17px
  margin-top 0px

.menu > ul > li > a
  color #fff
  width 130px
  text-align center
  padding 10px 10px

.menu > ul > li > a.longer
  width 154px
  padding-left 0
  padding-right 0

.nav-pills>li.active>a, .nav-pills>li.active>a:hover, .nav-pills>li.active>a:focus
  background none
  font-weight bold

.nav>li>a:hover, .nav>li>a:focus
  text-decoration none
  background-color #151C64

.menu-magics-logo
  float left
  margin-right 18px
  margin-left 6px
