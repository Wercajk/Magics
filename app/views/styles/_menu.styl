.menu > ul
  text-transform uppercase
  font-size 20px
  font-weight normal
  margin 0 auto
  border-radius 8px
  background url(/images/Menu-Background.png) no-repeat
  background-position 50% 50%
  width 607px

.menu > ul > li
  padding 11px 7px
  margin-top 16px

.menu > ul > li > a
  color #fff
  width 130px
  text-align center

.menu > ul > li > a.longer
  width 154px
  padding-left 0
  padding-right 0

.nav-pills>li.active>a, .nav-pills>li.active>a:hover, .nav-pills>li.active>a:focus
  background: none

.nav>li>a:hover, .nav>li>a:focus
  text-decoration none
  background-color #151C64

.menu-magics-logo
  overflow visible
  float left
  position relative
  // top -15px
  // left 10px

.menu-drylock-logo
  float right
  position relative
